<!-- availabletopics.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Topics for <%= quizName %></title>
    <style>

/* availabletopics.css */

/* styles.css */

body {
    background-color: #f2f2f2;
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px;
    background-color: #ffffff;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    align-items: center;
}

h1 {
    color: #333333;
    text-align: center;
    margin-top: 20px;
}

ul {
    list-style-type: none;
    width: 100%;
    margin-top: 20px;
}

li {
    width: 90%;
    padding: 15px;
    background-color: #f5f5f5;
    border-radius: 8px;
    box-shadow: 0 0 15px rgba(12, 12, 12, 0.247);
    margin-bottom: 20px;
}

button {
    background-color: #559eff;
    color: #ffffff;
    border: none;
    padding: 10px 20px;
    margin-top: 10px;
    border-radius: 3px;
    cursor: pointer;
    font-size: 14px;
    transition: background-color 0.3s ease;
}

button:hover {
    background-color: #003ba0;
}

form {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-top: 10px;
    margin-bottom: 10px;
}

label {
    display: block;
    margin-bottom: 5px;
    margin-top: 5px;
    font-weight: bold;
    color: #333333;
}

input[type="text"] {
    width: 98%;
    padding: 10px;
    border: 1px solid #cccccc;
    border-radius: 3px;
    margin-top: 5px;
}

input[type="submit"] {
    background-color: #8fbfff;
    color: #ffffff;
    border: none;
    padding: 10px 20px;
    border-radius: 3px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    margin-top: 20px;
}

input[type="submit"]:hover {
    background-color: #6e9ae6;
}

p {
    text-align: center;
    color: #333333;
    margin-top: 40px;
}

.name {
    font-weight: 500;
}

a {
    text-decoration: none;
    color: #007bff;
    font-weight: bold;
}

a:hover {
    text-decoration: underline;
}

    </style>
    <!-- Include any CSS or stylesheets here if needed -->
</head>
<body>
    <h1>Available Topics </h1>

    <ul>
        <% topics.forEach(topic => { %>
            <li>
                <a href="/viewquiz/<%= encodeURIComponent(quizName) %>/<%= encodeURIComponent(topic) %>">
                    <%= topic %>
                </a>
            </li>
        <% }); %>
    </ul>

    <!-- Add any additional content or functionality as needed -->

</body>
</html>
